{
    "name": "merge-subtitles",
    "version": "1.0.5",
    "author": "Max Zakharzhevskiy",
    "description": "Utility to combine .SRT subtitles with .MP4 files inside specified folders.",
    "license": "MIT",
    "main": "dist/cli.js",
    "bin": "dist/cli.js",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=12.2.1"
    },
    "keywords": [
        "utility",
        "winrar",
        "javascript",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/merge-subtitles.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/merge-subtitles/issues"
    },
    "scripts": {
        "dev": "tsc",
        "build": "rm -rf dist && tsc",
        "prepublish": "yarn build",
        "makebin": "yarn build && pkg -t host -o mergesubs dist/index.js"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "minimist": "^1.2.5",
        "rimraf": "^3.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.0.27",
        "@types/rimraf": "^3.0.0"
    }
}
