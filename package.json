{
    "name": "rarsrt",
    "version": "1.2.4",
    "author": "Max Zakharzhevskiy",
    "description": "Utility to combine .SRT subtitles with .MP4 files inside specified folders.",
    "license": "MIT",
    "main": "dist/cli.js",
    "bin": "dist/cli.js",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=12.2.1"
    },
    "keywords": [
        "utility",
        "video",
        "subtitles",
        "mp4",
        "srt",
        "javascript",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/rarsrt.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/rarsrt/issues"
    },
    "devDependencies": {
        "@types/minimist": "^1.2.2",
        "@types/node": "18.15.5",
        "@types/rimraf": "3.0.2",
        "pkg": "^5.8.1",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "minimist": "1.2.8",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "dev": "tsc -w",
        "build1": "tsup src/index.ts --format cjs --clean",
        "build": "tsup src/index.ts --format cjs --clean && pkg -t node18-win-x64 -o mergesubs dist/index.js",
        "_build": "rm -rf dist && tsc",
        "_prepublish": "pnpm build",
        "_makebin": "pnpm build && pkg -t node18-win-x64 -o mergesubs dist/index.js"
    }
}
